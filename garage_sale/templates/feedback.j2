{% extends "base/base.j2" %}
{% import "base/macros.j2" as macro %}

{% block title %}Feedback{% endblock %}

{% block styles %}
    {{ macro.css_stylesheet(url_for('static', filename='styles/feedback.css')) }}
{% endblock %}

{% block content %}
    {{ super() }}
    <main class="closesCart">
    <form id="form" action="/contact" method="POST">
        <div class="form-group">
            <label for="InputEmail1">Email address</label>
            <input type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp" name="email" required>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else, Unless we
                change our minds</small>
        </div>
        <div class="form-group">
            <label for="subject">What is the nature of your feedback?</label>
            <select class="form-control" id="subject" name="subject" required>
                <option value="">Select a subject...</option>
                <option>Website Issue</option>
                <option>Account Issue</option>
                <option>Payment Issue</option>
                <option>Terms of Service Questions</option>
            </select>
        </div>

        <div class="form-group">
            <label for="message">Tell us about your Grievance</label>
            <textarea class="form-control" id="message" rows="3" name="complaint" required></textarea>
        </div>
        <button class="btn btn-primary" type="submit">Send Feedback</button>
    </form>
    </main>
{% endblock %}
